echo "Skip pre-push hooks with --no-verify (not recommended).\n" 

echo "Generating documentation before push.\n"
(cd development_environment && make documentation)

if [ $? -lt 1 ]
    then
        echo "Documentation generated.\n"
    else
        echo "Something went wrong.\n"
        exit 1
fi

git add -A 

git commit -m "Autogenerate documentation with githook" --no-verify

git push --no-verify

exit 0
